<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextAppearance" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">19sp</item>
        <!--<item name="android:colorPrimaryDark">@color/colorEdText</item>-->
        <!--<item name="android:colorPrimary">@color/colorEdText</item>-->
        <!--<item name="android:colorAccent">@color/colorEdText</item>-->
        <!--<item name="android:textColorPrimary">@color/colorEdText</item>-->
        <!--<item name="android:textColorSecondary">@color/colorEdText</item>-->
        <item name="colorControlActivated">@color/input_layout__activated</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/toolbar_line</item>
        <item name="android:textSize">12sp</item>
        <!--<item name="android:backgroundTint">#FFF</item>-->
        <item name="android:singleLine">true</item>
        <!--<item name="android:layout_weight">0.7</item>-->
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <!--<item name="android:paddingTop">10dp</item>-->
        <item name="android:background">@drawable/et_bg_selector</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Colored</item>-->
        <item name="android:textColorHint">@color/toolbar_line</item>
        <!--android:layout_margin="16dp"-->
        <!--android:padding="16dp"-->
        <!--android:background="@drawable/commit_edit_text"-->
    </style>


</resources>
