<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="12dp"/>
            <gradient
                android:startColor="@color/commit_btn_pressed_start"
                android:centerColor="@color/commit_btn_pressed_center"
                android:endColor="@color/commit_btn_pressed_end"
                android:angle="180" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="12dp"/>
            <gradient
            android:startColor="@color/commit_btn_normal_start"
            android:centerColor="@color/commit_btn_normal_center"
            android:endColor="@color/commit_btn_normal_end"
            android:angle="180" />
        </shape>
    </item>
</selector>